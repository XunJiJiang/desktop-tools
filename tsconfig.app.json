{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "types": [],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* alias */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@fu/*": ["apps/full-viewport/src/*"],
      "@mv/*": ["apps/main-viewport-only/src/*"],
      "@apps/*": ["apps/pub-src/*"],
      "@comp/*": ["apps/pub-src/components/*"]
    }
  },
  "include": ["apps/**/*", "apps/env.d.ts", "utils", "types"]
}
