{
  "extends": "@tsconfig/node22/tsconfig.json",
  "exclude": ["apps/**/*"],
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*",
    "vite/**/*",
    "electron/**/*",
    "utils",
    "types"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "strict": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@ele/*": ["electron/main/*"]
    }
  }
}
